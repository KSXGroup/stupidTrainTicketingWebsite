            <input class="col-md-1 col-md-offset-1 col-sm-1 col-sm-offset-1 col-xs-1 col-xs-offset-1 input-md form-control" name="loc2" placeholder="到达站" type="text">
            <input class="col-md-1 col-md-offset-1 col-sm-1 col-sm-offset-1 col-xs-1 col-xs-offset-1  input-md form-control date" name="ddate" placeholder="日期" type="text">
            <button class="btn-lg btn-search glyphicon glyphicon-search col-md-1 col-md-offset-1 col-sm-1 col-sm-offset-1 col-xs-1 col-xs-offset-1" type="button" onclick="queryTicket()"></button>
        </div>
    </form>
</div>
<div id="bryan">
</div>

<div name="block-template" class="sr-only">
    <div class = "container-fluid">
        <div class = "row">
            <div class="text-center"><label class="col-lg-2 col-md-2 col-sm-2" style = "font-size:200%" id = "ID_TRAIN_ID">TRAIN_ID</label></div>
