                    <label style = "font-size:95%; margin-left:5%" id = "lloc1">REPALCE-LOC1</label>
                    <label class = "small">TIME-1</label>
                </div>
                <div class="col-lg-3 col-md-2 col-sm-3" >
                    <label style = "font-size:95%;" id = "lloc2">REPALCE-LOC2</label>
                    <label class = "small" >TIME-2</label>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4" name="kind-type">
                </div>
            </div>
        </div>
    </div>
</div>

<div name="ticket_template"  class="sr-only">
    <div class="row" style="font-size:80%">
        <label style="font-size:80%">高级软卧</label>
        <label style="font-size:100%">$55541.66</label>
        <label style="font-size:60%">余票:2222</label>
        <button class="btn btn-normal btn-pay pull-right">PAY!</button>
    </div>
</div>


<script type="text/javascript">
    var trainData;
   function queryTicket(){
        $("#bryan").empty();
        var form = new FormData(document.getElementsByName("queryTicForm")[0]);
        $.ajax({
                url:'{{url_for("queryRes")}}',
                type:'POST',
                data:form,
                dataType: 'json',
                processData: false,
                contentType: false,
                cache : false,
                success:function(data){
                    trainData = data;
                    for(var i = 1; i < trainData.length; ++i){
                        var myhtm = createTable(i);
                        $("#bryan").append(myhtm);
                    }
                    alert(trainData);

                },
                error:function(e){
                }
        });
   }

    function createTable(dataId){
       var currentTrainData = trainData[dataId];
       alert(currentTrainData);
       var trainId = currentTrainData[0];
       var trainIdtmp = "";
       var loc1="", loc2="";
       var time1="", time2="";
       var pattern = /[CDGKTZ][0-9A-Z]*/;
       var st = trainId.search(pattern);
       for(var i = st; i < trainId.length - 2; ++i) trainIdtmp += trainId[i];
       trainId = trainIdtmp;
       loc1 = currentTrainData[1];
       loc2 = currentTrainData[4];
       time1 = currentTrainData[3];
       time2 = currentTrainData[6];
       var templateHtm = document.getElementsByName("block-template")[0].innerHTML;
       templateHtm.replace("REPLACE-LOC1", loc1);
       templateHtm.replace("REPLACE-LOC2", loc2);
       templateHtm.replace("TIME-1", time1);
       templateHtm.replace("TIME-2", time2);
       return templateHtm;
    }
